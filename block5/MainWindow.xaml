<Window x:Class="block5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:block5"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="MainWindow"
        Height="600"
        Width="600"
        Background="#7556a4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Bar -->
        <Rectangle Grid.ColumnSpan="2"
                   HorizontalAlignment="Stretch"
                   Height="25"
                   VerticalAlignment="Top"
                   MouseLeftButtonDown="DragBar_MouseDown"
                   Cursor="Hand"
                   Stroke="Black"
                   Fill="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>

        <Button Grid.Column="1"
                Content="X"
                FontWeight="Bold"
                Foreground="White"
                Background="Red"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Width="35"
                Height="20"
                Margin="0,0,5,0"
                Click="Button_CloseWindow"/>

        <!-- Checkboxes -->
        <CheckBox x:Name="checkColor"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Height="16"
                  Width="16"
                  Grid.Column="0"
                  Grid.Row="2"
                  Click="CheckBox_Click"/>
        <CheckBox x:Name="checkOpacity"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Height="16"
                  Width="16"
                  Grid.Column="0"
                  Grid.Row="3"
                  Click="CheckBox_Click"/>
        <CheckBox x:Name="checkHello"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Height="16"
                  Width="16"
                  Grid.Column="0"
                  Grid.Row="4"
                  Click="CheckBox_Click"/>

        <!-- Buttons -->
        <Button Content="Змінити колір"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="180"
                Height="40"
                Grid.Column="1"
                Grid.Row="2"
                Click="Button_Click_Color"/>
        <Button Content="Змінити прозорість"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="180"
                Height="40"
                Grid.Column="1"
                Grid.Row="3"
                Click="Button_Click_Opacity"/>
        <Button Content="Відправити привітання"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="180"
                Height="40"
                Grid.Column="1"
                Grid.Row="4"
                Click="Button_Click_Hello"/>
        <Button x:Name="superButton"
                Content="Супер-кнопка"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="310"
                Height="40"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                Click="Button_Click_Super"/>
    </Grid>
</Window>
